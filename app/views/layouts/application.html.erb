<!DOCTYPE html>
<html>
  <head>
    <title>Wanderleaseapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <% unless current_user %>
          <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: 'btn btn-success col-12'%>
        <% else %>
          <%= current_user[:name] %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: 'btn btn-success col-12'%>
        <% end %>
      </div>

      <div style='float: right;'>
        <%= link_to 'Preferences', preferences_path, class: 'btn btn-success col-12'%> 
      </div>
    </div>
  </nav>
  <%= yield %>
  </body>
</html>
