<div class="centered">
  <%= form_for @listing, url: {action: "create"} do |f| %>
    <div class='form-group'>
      <%= f.label :location, "Location" %>
      <%= f.text_field :location %>
    </div>
    <div class='form-group'>
      <%= f.label :price, "Price $" %>
      <%= f.text_field :price %>
    </div>
    <div class='form-group'>
      <%= f.label :duration, "Duration Available" %>
      <%= f.text_field :duration %>
    </div>
    <div class='form-group'>
      <%= f.label :amenities, "Amenities" %>
      <%= f.text_area :amenities %>
    </div>
    <div class='form-group'>
      <%= f.label :housing_type, "Housing Type" %>
      <%= f.text_field :housing_type %>
    </div>
    <div class='form-group'>
      <%= f.label :description, "Description" %>
      <%= f.text_area :description %>
    </div>

    <%= f.submit "Submit", :class => 'btn btn-primary'%>
   <% end %>
 </div>
